@page
@model BaistClub.Pages.StandingTeeTimeRequestModel
@{
}
<form method="post">
    <table>
        <tr>

            <td>

                <p>Requested Start Date</p>
                <input type="date" asp-for="@Model.RequestedStartDate" />
                @Html.ValidationMessageFor(modelItem => modelItem.RequestedStartDate)
            </td>
            <td>

                <p>Requested End Date</p>
                <input type="date" asp-for="@Model.RequestedEndDate" />
                @Html.ValidationMessageFor(modelItem => modelItem.RequestedEndDate)
            </td>
            <td>
                <p>Requested Start time</p>
                <input type="time" asp-for="@Model.RequestedStartTime" />
                @Html.ValidationMessageFor(modelItem => modelItem.RequestedStartTime)
            </td>
            <td>
                <p>Additional Member 1</p>
                <input type="text" asp-for="@Model.MemberID2" />
                @Html.ValidationMessageFor(modelItem => modelItem.MemberID2)
            </td>
            <td>
                <p>Additional Member 2</p>
                <input type="text" asp-for="@Model.MemberID3" />
                @Html.ValidationMessageFor(modelItem => modelItem.MemberID3)
            </td>
            <td>
                <p>Additional Member 3</p>
                <input type="text" asp-for="@Model.MemberID4" />
                @Html.ValidationMessageFor(modelItem => modelItem.MemberID4)
            </td>
            <td>
                <p>Number of Golf Carts</p>
                <input type="text" asp-for="@Model.NumberOfCarts" />
                @Html.ValidationMessageFor(modelItem => modelItem.NumberOfCarts)
            </td>
            <td>
                <button type="submit">Submit Request</button>
            </td>
        </tr>
    </table>
</form>