@model BaistClub.Pages.RecordScoresModel
@{
}
<h2>Record Player Scores</h2>

<p>Update values and click submit for each hole</p>
<table>
    
        <tr>
            <h6>Hole</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.HoleNumber)
        </tr>
        <tr>
            <h6>Date</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.TeeTimeStartDate)
        </tr>
        <tr>
            <h6>Time</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.TeeTiemStartTime)
        </tr>

        <tr>
            <h6>Par</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.Par)
        </tr>
        <tr>
            <h6>Red</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.Red)
        </tr>
        <tr>
            <h6>White</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.White)
        </tr>
        <tr>
            <h6>Blue</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.Blue)
        </tr>

        <tr>
            <h6>Stroke Index Men</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.StrokeIndexMan)
        </tr>

        <tr>
            <h6>Stroke Index Women</h6>
            @Html.ValidationMessageFor(modelItem => modelItem.StrokeIndexWoman)
        </tr>
    
</table>

@Html.Raw(Model.Msg);




<form method="post">
    <table>


        <tr>


            <td>

                <input type="date" asp-for="@Model.HoleNumber" />

            </td>
            <td>
                <input type="text" asp-for="@Model.TeeTimeStartDate" />
            </td>
            <td>
                <input type="text" asp-for="@Model.TeeTiemStartTime" />

            </td>
            <td>
                <input type="text" asp-for="@Model.Par" />

            </td>

            <td>
                <input type="text" asp-for="@Model.Red" />

            </td>

            <td>
                <input type="text" asp-for="@Model.White" />

            </td>

            <td>
                <input type="text" asp-for="@Model.Blue" />

            </td>
            <td>
                <input type="text" asp-for="@Model.StrokeIndexMan" />

            </td>
            <td>
                <input type="text" asp-for="@Model.StrokeIndexWoman" />

            </td>





        </tr>

    </table>
    <button type="submit">Submit</button>
</form>

