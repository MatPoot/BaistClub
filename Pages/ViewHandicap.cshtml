@page
@model BaistClub.Pages.ViewHandicapModel
@{
}

<h3>View Handicap</h3>

<table>
    <tr>


        <td>

           <h4>Handicap Index</h4>

        </td>
        <td>
            <h4>Last 20 Average</h4>
        </td>
        <td>
            <h4>Best 8 Average</h4>

        </td>




    </tr>
</table>

@Html.Raw(Model.Msg);
@foreach (var record in @Model.HandicapList)
{


    <table>
        <tr>


            <td>

                @Html.DisplayFor(modelItem => record.HandicapIndex)

            </td>
            <td>
                @Html.DisplayFor(modelItem => record.Last20Avg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => record.Best8Avg)

            </td>




        </tr>
    </table>

}